{
    "version": 1,
    "disable_existing_loggers": false,
    "filters":{
        "default":{
            "()": "src.utils.custom_log.filter.ContextFilter"
        }
    },
    "formatters": {
        "default": {
            "()": "uvicorn.logging.DefaultFormatter",
            "fmt": "%(levelprefix)s %(message)s",
            "use_colors": null
        },
        "access": {
            "()": "src.utils.custom_log.formatter.CustomAccessFormatter",
            "fmt": "{\"level\": \"%(levelname)s\", \"now\": \"%(created)f\", \"PID\": \"%(process)d\", \"method\": \"%(method)s\", \"code\": \"%(status_code)s\", \"client\": \"%(client_addr)s\", \"proxies\": \"%(proxies)s\", \"site_code\": \"%(site_code)s\"}"
        }
    },
    "handlers": {
        "default": {
            "formatter": "default",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stderr"
        },
        "access": {
            "formatter": "access",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        }
    },
    "loggers": {
        "uvicorn": {"handlers": ["default"], "level": "INFO"},
        "uvicorn.error": {"level": "INFO"},
        "uvicorn.access": {"handlers": ["access"], "level": "INFO", "propagate": false, "filters":  ["default"]}
    }
}
